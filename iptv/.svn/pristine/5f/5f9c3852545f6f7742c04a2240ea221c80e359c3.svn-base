/************ 翻牌页面 *******/
body{
    background: url('../images/cards/bodyBg.png') no-repeat;
}
#main{
    width: 532px;
    min-height: 532px;
}
.wrapper{
    width: 1034px;
    height: 644px;
    text-align:center;
}
.resultInfo{
    width: 128px;
    height: 128px;
    background: url('../images/cards/cardResult.png') no-repeat;
}

.awardInfo{
    font-size: 13px;
    width:115px;
    text-align: left;
    height:60px;
    line-height: 30px;
}
.chance{
    bottom: -15px;
    left: 70px;
    width: 420px;
    height: 44px;
    line-height: 44px;
    background: url('../images/cards/bottom.png') no-repeat;
}
#right-box{
    width: 340px;
    height: 388px;
    background: url('../images/cards/winnerList.png') no-repeat;
}
.box{
    width: 40px;
    height: 51px;
    overflow:  hidden;
}
.winner{
    font-size: 21px;
    color:  #EE457B;
    height: 120px;
    line-height: 30px;
    overflow: hidden;
}
.cardBorder{
    width: 129px;
    height: 130px;
    border:4px solid #3f7ddb; 
}
.confirBtn,.noChange{
    width: 92px;
    height: 30px;
    text-align:center;
    line-height: 30px;
    
}
.confirBtn{
    background: url("../images/cards/confirmBtn.png") no-repeat;
    color: #dc6408;
}
.noChange{
    background: url("../images/cards/noChance.png") no-repeat;
    color: #fff;
}

/******** 答题页面 ********/
.ques-content{
    width: 488px;
    height: 470px;
    background: url('../images/answer/bg.png') no-repeat;
}

#numTitle{
    width: 238px;
    height: 60px;
    background: url('../images/answer/titleBorder.png') no-repeat;
    text-align: center;
    line-height: 60px;
    color: #FFFF79;
    font-size: 28px;
}
#quzTitle{
    height:40px;
    line-height: 40px;
}
#questionBox{
    width: 440px;
    height: 380px;
    font-size: 24px;
    text-align: left;
}
.option-item{
    width: 384px;
    height: 44px;
    margin-bottom:20px;
    text-align: center;
    line-height: 44px;
}
.option-one{
    background: url('../images/answer/first.png') no-repeat;
}
.option-two{
    background: url('../images/answer/second.png') ;
}
.option-three{
    background: url('../images/answer/third.png') ;
}
.option-four{
    background: url('../images/answer/forth.png') ;
}
.answerIng{
    width: 452px;
    height: 260px;
    background: url('../images/answer/answer-ing.png') no-repeat;
}
.remind{
    text-align: left;
    line-height: 30px;
    font-size: 20px;
}
#answerUsers{
    width: 347px;
    height: 112px;
    overflow: hidden;
}
#answerUsers div{
    margin-bottom:20px;
    font-size: 24px;
}

/******转盘页面*******/
#winnerBox{
    width: 420px;
    height: 230px;
    background: url('../images/turnplate/winnerInfo.png') no-repeat;
}
#cardsWinnerUser{
    width: 260px;
    height: 150px;
    text-align:left;
    font-size: 15px;
    line-height: 30px;
    overflow: hidden;
}
#winnerInfo{
    width:420px;
    height: 150px;
    text-align: left;
    font-size: 20px;
    line-height: 35px;
    overflow: hidden;
}
#myPrizeBox{
    width: 420px;
    height: 204px;
    background: url('../images/turnplate/myPrizeInfo.png') no-repeat;
}
#myInfoTitle{
    width: 390px;
}
#myPrizeBox span{
    display: inline-block;
    width: 120px;
    text-align: center;
}
#myPrizeBox div{
    margin-bottom:10px;
}



