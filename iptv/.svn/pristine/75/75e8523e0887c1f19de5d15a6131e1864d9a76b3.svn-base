function destroy(){
	clearInterval(timer);
	if(mp){
		mp.stop();
	}		
}

var timer = null;
function isEnd(){
	var curTime = mp.getCurrentPlayTime();
	var allTime = mp.getMediaDuration();
	if((allTime == curTime) && (curTime != 0)){
		clearInterval(timer);
		mp.releaseMediaPlayer(instanceId);
		window.location.href = "Lottery.html";
	}
}

