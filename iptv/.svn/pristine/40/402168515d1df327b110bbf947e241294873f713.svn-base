/************ 翻牌页面 *******/
body{
    background: url('../images/turnplate/bg.png') no-repeat;
    position: relative;
}
#main{
    width: 532px;
    min-height: 532px;
}
.wrapper{
    width: 1034px;
    height: 644px;
    text-align:center;
}
.resultInfo{
    width: 120px;
    height: 172px;
    background: url('../images/cards/cardResult.png') no-repeat;
    
}

.awardInfo{
    font-size: 13px;
    width:115px;
    text-align: left;
    height:60px;
    line-height: 30px;
}
.chance{
    bottom: -50px;
    left: -60px;
    width: 580px;
    height: 46px;
    line-height: 44px;
    background: url('../images/cards/bottom.png') no-repeat;
    font-size: 24px;
    letter-spacing: 3px;
}
#right-box{
    width: 398px;
    height: 464px;
    background: url('../images/cards/winnerList2.png') no-repeat;
    
}
.box{
    width: 40px;
    height: 51px;
    overflow:  hidden;
}
.winner{
    font-size: 21px;
    color:  #EE457B;
    height: 120px;
    line-height: 30px;
    overflow: hidden;
}
.cardBorder{
    width: 120px;
    height: 172px;
    border:4px solid #ffd21f; 
    box-shadow: 0 0 30px #ffd21f;
}
.confirBtn,.noChange{
    width: 92px;
    height: 30px;
    text-align:center;
    line-height: 30px;
}
.confirBtn{
    background: url("../images/cards/confirmBtn.png") no-repeat;
    color: #dc6408;
}
.noChange{
    background: url("../images/cards/noChance.png") no-repeat;
    color: #fff;
}
.result-modal{
    width: 1280px;
    height: 720px;
    background: rgba(26, 26, 26, .6);
    z-index: 99;
    
}
#result-info{
    display: none;
}
#modal-box{
    width: 652px;
    height: 406px;
    background: url("../images/answer/modal-box.png") no-repeat;
    text-align:center;
    letter-spacing: 5px;
    z-index: 100;
    margin: 0 auto;
    margin-top:140px;
    /* padding-top:60px; */
    /* display: none; */
}
.modal-info{
    width: 408px;
    color: #e39d29;
    font-size: 32px;
    margin: 0 auto;
    line-height: 50px;
    padding-top:100px;
}
.modal-btn{
    width: 184px;
    height: 44px;
    background: #F38039;
    font-size: 36px;
    text-align: center;
    line-height: 44px;
    margin: 0 auto;
    margin-top:30px;
}
#result-btn{
    width: 122px;
    height: 40px;
    background: url("../images/cards/confirmBtn.png") no-repeat;
    background-size: 122px;
    color: #dc6408;
    text-align: center;
    line-height: 40px;
}
#result-other{
    width: 358px;
    height: 358px;
    background: url('../images/cards/cardResult.png') no-repeat;
    background-size: 358px 358px;
}
#card_result{
    font-size: 20px;
    line-height: 30px;
}
#prizeInfo,#checkPrize{
    width:112px;
    height: 54px;
    text-align: center;
    line-height: 54px;
   
    background-size:112px 54px;
    font-weight:bold;
    letter-spacing: 2px;
}
.nosel{
    background: url("../images/cards/btn1.png") no-repeat;
}
.checked{
    background: url("../images/cards/checked.png") no-repeat;
}
/******** 答题页面 ********/
.quesBorder{
    width: 384px;
    height: 44px;
    border:4px solid #fffc00;
    box-shadow: 0 0 30px  #fffc00;
}
.ques-content{
    width: 488px;
    height: 470px;
    background: url('../images/answer/bg.png') no-repeat;
}

#numTitle{
    width: 238px;
    height: 60px;
    background: url('../images/answer/titleBorder.png') no-repeat;
    text-align: center;
    line-height: 60px;
    color: #FFFF79;
    font-size: 28px;
}
#quzTitle{
    line-height: 26px;
}
#questionBox{
    width: 440px;
    height: 380px;
    font-size: 20px;
    text-align: left;
}
#options{
    margin-left: 20px;
    margin-top: 20px;
}
.option-item{
    width: 384px;
    height: 44px;
    margin-bottom:10px;
    text-align: center;
    line-height: 44px;
}
.option-one{
    background: url('../images/answer/first.png') no-repeat;
}
.option-two{
    background: url('../images/answer/second.png') ;
}
.option-three{
    background: url('../images/answer/third.png') ;
}
.option-four{
    background: url('../images/answer/forth.png') ;
}
.answerIng{
    width: 452px;
    height: 260px;
    background: url('../images/answer/answer-ing.png') no-repeat;
}
.remind{
    text-align: left;
    line-height: 30px;
    font-size: 20px;
}
#answerUsers{
    width: 347px;
    height: 112px;
    overflow: hidden;
}
#answerUsers div{
    margin-bottom:20px;
    font-size: 24px;
}
#result-modal{
    text-align:center;
    /* line-height: 720px; */
    font-size: 30px;
    letter-spacing: 5px;
    margin-top:350px;
}
.button{
    text-align: center;
    margin-top:40px;
    font-size: 30px;
}
.button span{
    display: inline-block;
    background: #F28039;
    width: 150px;
    height: 50px;
    text-align: center;
    line-height: 50px;
    margin: 0 auto;
}
.border{
    width: 150px;
    height: 50px;
    border: 2px solid #616161;
}

/******转盘页面*******/
#pointer{
    z-index: 10;
}
#winnerBox{
    width: 420px;
    height: 230px;
    background: url('../images/turnplate/winnerInfo.png') no-repeat;
}
#cardsWinnerUser{
    width: 290px;
    height: 120px;
    text-align:left;
    font-size: 15px;
    line-height: 30px;
    overflow: hidden;
}
#winnerInfo{
    width:420px;
    height: 150px;
    text-align: left;
    font-size: 20px;
    line-height: 35px;
    overflow: hidden;
}
#myPrizeBox{
    width: 420px;
    height: 204px;
    background: url('../images/turnplate/myPrizeInfo.png') no-repeat;
}
#myInfoTitle{
    width: 390px;
}
#myPrizeBox span{
    display: inline-block;
    width: 120px;
    text-align: center;
}
#myPrizeBox div{
    margin-bottom:10px;
}




